<h1>Welcome {{#if currentUser}}{{currentUser.username}}{{/if}} to Reddit.js Tutorial</h1>

<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        {{#if posts}}
            <ul>
                {{#each posts}}
                    <li class="list-group-item">
                        <div class="lead">
                            <a href="/posts/{{this._id}}">{{this.title}}</a>
                        </div>
                        <a href="{{this.url}}" target="_blank">{{this.url}}</a>
                        <div><small>
                            <a href="/users/:{{this.author.username}}">{{this.author.username}}</a>
                        </small></div>
                        <div class="text-right">
                            <a href="/n/{{this.subreddit}}">{{this.subreddit}}</a>
                        </div>

                        <form class="vote-up" data-id="{{this._id}}">
                            <button type="submit">Vote Up</button>
                        </form>
                        |
                        <form class="vote-down" data-id="{{this._id}}">
                            <button type="submit">Vote Down</button>
                        </form>

                    </li>
                {{/each}}
            </ul>
        {{else }}
            <h1 style="text-align: center; color:red">No Posts Found</h1>
        {{/if }}
    </div>
</div>